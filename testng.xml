<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Magento Test Suite" verbose="1" >

    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter"/>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.SuiteHTMLReporter"/>
    </listeners>

    <test verbose="2" name="Catalog Module Test" >
        <classes>
            <class name="com.unitedcoder.regressiontest.catalogmodultestrunner.CatalogModuleTestRunner"/>
        </classes>
    </test>
    <test verbose="2" name="Story Module Test" >
        <classes>
            <class name="com.unitedcoder.regressiontest.storemoduletestrunner.StoreModuleTestRunner"/>
        </classes>
    </test>

</suite>